{
  "manifest_version": 3,
  "name": "KathWare Media Player",
  "description": "Extensión de accesibilidad para subtítulos en reproductores web.",
  "version": "2.0.0",
  "author": "Katherine Vargas (KathWare)",
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["kathware-core.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle_kathware_narrator": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Activar o desactivar narrador de KathWare"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
