{
  "manifest_version": 3,
  "name": "KathWare Media Player",
  "description": "Extensión de accesibilidad para lectura de subtítulos en reproductores web.",
  "version": "2.0.0",
  "author": "Katherine Vargas (KathWare)",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/kwmp.bootstrap.js",
        "content/kwmp.utils.js",
        "content/kwmp.platforms.js",
        "content/kwmp.voice.js",
        "content/kwmp.toast.js",
        "content/kwmp.overlay.js",
        "content/kwmp.video.js",
        "content/kwmp.track.js",
        "content/kwmp.visual.js",
        "content/kwmp.flowA11y.js",
        "content/kwmp.pipeline.js",
        "content/kwmp.hotkeys.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "commands": {
    "toggle_kathware_narrator": {
      "suggested_key": {
        "default": "Alt+Shift+K"
      },
      "description": "Activar o desactivar narrador de KathWare"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
