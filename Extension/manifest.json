{
  "manifest_version": 3,
  "name": "KathWare SubtitleReader",
  "short_name": "KWSR",
  "description": "Extensión de accesibilidad que lee subtítulos en tiempo real mediante lector de pantalla o voz del sistema. Detecta automáticamente la mejor fuente disponible y adapta reproductores poco accesibles.",
  "version": "2.0.0",
  "author": "Katherine Vargas (KathWare)",
  "minimum_chrome_version": "114",

  "permissions": [
    "storage",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/core/kwsr.bootstrap.js",
        "content/core/kwsr.utils.js",
        "content/core/kwsr.platforms.js",

        "content/core/kwsr.voice.js",
        "content/core/kwsr.video.js",
        "content/core/kwsr.track.js",
        "content/core/kwsr.visual.js",

        "content/ui/kwsr.toast.js",
        "content/ui/kwsr.overlay.js",

        "content/adapters/kwsr.keepAlive.js",
        "content/adapters/kwsr.nonAccessible.platforms.js",

        "content/core/kwsr.pipeline.js",
        "content/core/kwsr.hotkeys.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "commands": {
    "toggle_kathware_subtitlereader": {
      "suggested_key": {
        "default": "Alt+Shift+K"
      },
      "description": "Activar o desactivar KathWare SubtitleReader"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}